<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmergencyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. Sourced from frontend theme (light and dark share same primary hues). -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background / Surface defaults for DayNight -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EmergencyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EmergencyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EmergencyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Provide aliases for Material overlay names that may be referenced by libraries
         or older resource names. They delegate to AppCompat overlays to ensure
         resources exist regardless of the Material components variant shipped. -->
    <style name="ThemeOverlay.MaterialComponents.DarkActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ThemeOverlay.MaterialComponents.Light" parent="ThemeOverlay.AppCompat.Light" />
</resources>
